  --bg:#0b1220;
  --card:#121b2f;
  --text:#e9eefc;
  --muted:#b7c2e2;
  --accent:#6ea8fe;
  --border:rgba(255,255,255,.10);
}
*{box-sizing:border-box}
body{
  margin:0;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  background: linear-gradient(180deg, var(--bg), #060a12 70%);
  color:var(--text);
}
a{color:inherit}
