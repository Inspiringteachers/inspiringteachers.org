.brand span{font-size:13px;color:var(--muted)}
.menu{display:flex;gap:14px;flex-wrap:wrap}
.menu a{opacity:.9;text-decoration:none;font-size:14px}
.menu a:hover{opacity:1;text-decoration:underline}
